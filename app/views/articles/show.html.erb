<div class="main">
  <div class="container triangles-of-section">
               <div class="triangle-up-left"></div>
               <div class="square-left"></div>
               <div class="triangle-up-right"></div>
               <div class="square-right"></div>
          </div>
  <section>
     <div class="container">

        <div class="row">

            <!-- Blog Post Content Column -->
            <div class="col-lg-8">
             <h1><%= @article.title %></h1>
               <%= link_to 'Blog-Index', articles_path, class: 'btn btn-primary float-right' %>

                <!-- Author -->
                <p class="lead">
                    by <a href="#"><%= @article.author %></a>
                </p>
                <hr>

                <!-- Date/Time -->
                <p><span class="glyphicon glyphicon-time"></span><%= @article.created_at %></p>

                <hr>

                <img class="img-responsive" src="<%= @article.imagelink %>" alt="">

                <hr>

                <p class="lead"><%= raw @article.body %></p>

                <hr>

                <%= link_to 'Back', articles_path, class: 'btn btn-primary' %>



            </div>
        </div>
    </div>


  </section>
</div>

