     <div class="main">
          <div class="container triangles-of-section">
               <div class="triangle-up-left"></div>
               <div class="square-left"></div>
               <div class="triangle-up-right"></div>
               <div class="square-right"></div>
          </div>
          <section>
               <div class="container">
                    <div class="row">
                         <article class="post">
                               <% @blog_posts.all.order('created_at DESC').each do |blog_post| %>
                                   <div class="post_header">
                                        <h3 class="post_title"><a href="/blog_posts/<%= blog_post.id %>"><%= blog_post.title %></a></h3>
                                        <div class="post_sub"><i class="fa fa-clock-o"><%= blog_post.created_at %></i><i class="fa fa-user"></i> by <strong><%= blog_post.author %></strong> </div>
                                   </div>
                                   <div class="post_content">
                                        <figure><a href="/blog_posts/<%= blog_post.id %>"><img alt="0" src="<%= blog_post.imagelink  %>"></a></figure>
                                        <p><%= blog_post.description %></p>
                                       <%= link_to 'Read more', blog_post %>
                                     </div>
                              </article>
                              <% end %>
                    </div>
               </div>
          </section>
